---
import BaseLayout from '../layouts/BaseLayout.astro';
import HeroSection from '../components/HeroSection.astro';
import CTAButton from '../components/CTAButton.astro';
import { Calendar } from '@lucide/astro';
---

<BaseLayout
  title="Services"
  description="Complete naturopathic healthcare services including IV therapy, prolotherapy, acupuncture, clinical nutrition and specialized treatments for chronic conditions in Halifax, Nova Scotia."
  focusKeyword="naturopathic services Halifax"
>
  <HeroSection title="Naturopathic Services" centered>
    Natural healthcare guided by science and rooted in traditional healing.
    <CTAButton slot="cta" />
  </HeroSection>

  <!-- Service Categories -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="section-shell">
      
      <!-- Intravenous Therapies -->
      <div id="injectable" class="mb-16">
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-serif font-bold text-emerald-950 mb-4">Intravenous Therapies</h2>
          <p class="text-lg text-gray-600 max-w-3xl mx-auto">
            Intravenous nutrient therapy tailored to individual patient needs.
          </p>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
          <!-- IV Therapy -->
          <a href="/iv-therapy" class="bg-white border border-emerald-100 rounded-3xl overflow-hidden shadow-lg hover:shadow-xl transition-all hover:-translate-y-1 block group focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2">
            <div class="aspect-[4/3] overflow-hidden">
              <img src="/images/treatments/iv-patient-man.webp" alt="Patient receiving IV therapy" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" width="800" height="600" loading="lazy" />
            </div>
            <div class="p-6 text-center">
              <h3 class="text-xl font-serif font-semibold text-emerald-950 mb-3 group-hover:text-emerald-700 transition-colors">IV Therapy</h3>
              <p class="text-gray-600 mb-4">High-dose intravenous vitamin and mineral therapy for rapid nutrient delivery and therapeutic effects.</p>
              <span class="text-emerald-800 font-semibold group-hover:text-emerald-900">Learn More →</span>
            </div>
          </a>

          <!-- Myers Cocktail -->
          <a href="/myers-cocktail-intravenous-nutrients" class="bg-white border border-emerald-100 rounded-3xl overflow-hidden shadow-lg hover:shadow-xl transition-all hover:-translate-y-1 block group focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2">
            <div class="aspect-[4/3] overflow-hidden">
              <img src="/images/treatments/nad-patient.webp" alt="Patient receiving Myers Cocktail IV therapy" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" width="800" height="600" loading="lazy" />
            </div>
            <div class="p-6 text-center">
              <h3 class="text-xl font-serif font-semibold text-emerald-950 mb-3 group-hover:text-emerald-700 transition-colors">Myers Cocktail</h3>
              <p class="text-gray-600 mb-4">Classic IV nutrient formula for energy, immune support and overall wellness enhancement.</p>
              <span class="text-emerald-800 font-semibold group-hover:text-emerald-900">Learn More →</span>
            </div>
          </a>

          <!-- Chelation -->
          <a href="/chelation-therapy" class="bg-white border border-emerald-100 rounded-3xl overflow-hidden shadow-lg hover:shadow-xl transition-all hover:-translate-y-1 block group focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2">
            <div class="aspect-[4/3] overflow-hidden">
              <img src="/images/treatments/iv-patient-woman.webp" alt="Patient receiving chelation therapy" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" width="800" height="600" loading="lazy" />
            </div>
            <div class="p-6 text-center">
              <h3 class="text-xl font-semibold mb-3 group-hover:text-emerald-700 transition-colors">Chelation Therapy</h3>
              <p class="text-gray-600 mb-4">Heavy metal detoxification and cardiovascular health support through specialized IV treatments.</p>
              <span class="text-emerald-700 font-semibold group-hover:text-emerald-800">Learn More →</span>
            </div>
          </a>

          <!-- NAD+ Therapy -->
          <a href="/nad-therapy" class="bg-white border border-emerald-100 rounded-3xl overflow-hidden shadow-lg hover:shadow-xl transition-all hover:-translate-y-1 block group focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2">
            <div class="aspect-[4/3] overflow-hidden">
              <img src="/images/treatments/nad-iv-therapy-session.png" alt="Patient receiving NAD+ IV therapy at MacLeod Naturopathic" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" width="800" height="600" loading="lazy" />
            </div>
            <div class="p-6 text-center">
              <h3 class="text-xl font-semibold mb-3 group-hover:text-emerald-700 transition-colors">NAD+ Therapy</h3>
              <p class="text-gray-600 mb-4">Cellular energy and anti-aging support through NAD+ infusions for mental clarity and vitality.</p>
              <span class="text-emerald-700 font-semibold group-hover:text-emerald-800">Learn More →</span>
            </div>
          </a>
        </div>
      </div>

      <!-- Pain Management -->
      <div id="pain" class="mb-16">
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-serif font-bold text-emerald-950 mb-4">Pain Medicine</h2>
          <p class="text-lg text-gray-600 max-w-3xl mx-auto">
            Natural injection treatments for chronic pain & sports injuries.
          </p>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
          <!-- Prolotherapy -->
          <a href="/prolotherapy" class="bg-white border border-emerald-100 rounded-3xl overflow-hidden shadow-lg hover:shadow-xl transition-all hover:-translate-y-1 block group focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2">
            <div class="aspect-[4/3] overflow-hidden">
              <img src="/images/treatments/prolotherapy-knee-injection.png" alt="Dr. MacLeod performing prolotherapy knee injection" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" width="800" height="600" loading="lazy" />
            </div>
            <div class="p-6 text-center">
              <h3 class="text-xl font-semibold mb-3 group-hover:text-emerald-700 transition-colors">Prolotherapy</h3>
              <p class="text-gray-600 mb-4">Regenerative injection therapy to strengthen ligaments, tendons and joints for lasting pain relief.</p>
              <span class="text-emerald-700 font-semibold group-hover:text-emerald-800">Learn More →</span>
            </div>
          </a>

          <!-- Prolozone -->
          <a href="/prolozone" class="bg-white border border-emerald-100 rounded-3xl overflow-hidden shadow-lg hover:shadow-xl transition-all hover:-translate-y-1 block group focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2">
            <div class="aspect-[4/3] overflow-hidden">
              <img src="/images/treatments/prolozone-elbow-injection.png" alt="Prolozone elbow injection therapy" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" width="800" height="600" loading="lazy" />
            </div>
            <div class="p-6 text-center">
              <h3 class="text-xl font-semibold mb-3 group-hover:text-emerald-700 transition-colors">Prolozone</h3>
              <p class="text-gray-600 mb-4">Advanced combination of prolotherapy with ozone therapy for enhanced healing and pain relief.</p>
              <span class="text-emerald-700 font-semibold group-hover:text-emerald-800">Learn More →</span>
            </div>
          </a>

          <!-- Neural Prolotherapy -->
          <a href="/neural-prolotherapy-pain" class="bg-white border border-emerald-100 rounded-3xl overflow-hidden shadow-lg hover:shadow-xl transition-all hover:-translate-y-1 block group focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2">
            <div class="aspect-[4/3] overflow-hidden">
              <img src="/images/treatments/neural-prolotherapy-shoulder.png" alt="Neural prolotherapy shoulder injection" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" width="800" height="600" loading="lazy" />
            </div>
            <div class="p-6 text-center">
              <h3 class="text-xl font-semibold mb-3 group-hover:text-emerald-700 transition-colors">Neural Prolotherapy</h3>
              <p class="text-gray-600 mb-4">Specialized nerve pain treatment targeting neurogenic inflammation and chronic pain patterns.</p>
              <span class="text-emerald-700 font-semibold group-hover:text-emerald-800">Learn More →</span>
            </div>
          </a>

          <!-- Microcurrent -->
          <a href="/microcurrent-therapy" class="bg-white border border-emerald-100 rounded-3xl overflow-hidden shadow-lg hover:shadow-xl transition-all hover:-translate-y-1 block group focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2">
            <div class="aspect-[4/3] overflow-hidden">
              <img src="/images/treatments/microcurrent-therapy.webp" alt="Microcurrent therapy treatment" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" width="800" height="600" loading="lazy" />
            </div>
            <div class="p-6 text-center">
              <h3 class="text-xl font-semibold mb-3 group-hover:text-emerald-700 transition-colors">Microcurrent Therapy</h3>
              <p class="text-gray-600 mb-4">Low-level electrical stimulation to promote healing, reduce inflammation and manage pain.</p>
              <span class="text-emerald-700 font-semibold group-hover:text-emerald-800">Learn More →</span>
            </div>
          </a>
        </div>
      </div>

      <!-- Comprehensive Care -->
      <div id="comprehensive" class="mb-16">
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-serif font-bold text-emerald-950 mb-4">Comprehensive Natural Healthcare</h2>
          <p class="text-lg text-gray-600 max-w-3xl mx-auto">
            Natural approaches to health and prevention.
          </p>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
          <!-- Lab Testing -->
          <a href="/lab-testing" class="bg-white border border-emerald-100 rounded-3xl overflow-hidden shadow-lg hover:shadow-xl transition-all hover:-translate-y-1 block group focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2">
            <div class="aspect-[4/3] overflow-hidden">
              <img src="/images/reference/services/lab-testing.webp" alt="Laboratory diagnostic testing" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" width="800" height="600" loading="lazy" />
            </div>
            <div class="p-6 text-center">
              <h3 class="text-xl font-semibold mb-3 group-hover:text-emerald-700 transition-colors">Laboratory Testing</h3>
              <p class="text-gray-600 mb-4">Comprehensive diagnostic testing including functional medicine and nutritional assessments.</p>
              <span class="text-emerald-800 font-semibold group-hover:text-emerald-900">Learn More →</span>
            </div>
          </a>

          <!-- Clinical Nutrition -->
          <a href="/clinical-nutrition" class="bg-white border border-emerald-100 rounded-3xl overflow-hidden shadow-lg hover:shadow-xl transition-all hover:-translate-y-1 block group focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2">
            <div class="aspect-[4/3] overflow-hidden">
              <img src="/images/reference/services/clinical-nutrition.webp" alt="Clinical nutrition counseling" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" width="800" height="600" loading="lazy" />
            </div>
            <div class="p-6 text-center">
              <h3 class="text-xl font-semibold mb-3 group-hover:text-emerald-700 transition-colors">Clinical Nutrition</h3>
              <p class="text-gray-600 mb-4">Evidence-based nutritional assessment and targeted nutrient replenishment for optimal health.</p>
              <span class="text-emerald-800 font-semibold group-hover:text-emerald-900">Learn More →</span>
            </div>
          </a>

          <!-- Herbal Medicine -->
          <a href="/herbal-medicine" class="bg-white border border-emerald-100 rounded-3xl overflow-hidden shadow-lg hover:shadow-xl transition-all hover:-translate-y-1 block group focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2">
            <div class="aspect-[4/3] overflow-hidden">
              <img src="/images/reference/services/herbal-medicine.webp" alt="Herbal medicine remedies" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" width="800" height="600" loading="lazy" />
            </div>
            <div class="p-6 text-center">
              <h3 class="text-xl font-semibold mb-3 group-hover:text-emerald-700 transition-colors">Herbal Medicine</h3>
              <p class="text-gray-600 mb-4">Traditional and modern botanical medicine for therapeutic treatment and health maintenance.</p>
              <span class="text-emerald-800 font-semibold group-hover:text-emerald-900">Learn More →</span>
            </div>
          </a>

          <!-- Ozone Therapy -->
          <a href="/ozone-therapy" class="bg-white border border-emerald-100 rounded-3xl overflow-hidden shadow-lg hover:shadow-xl transition-all hover:-translate-y-1 block group focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2">
            <div class="aspect-[4/3] overflow-hidden">
              <img src="/images/treatments/ozone-therapy.webp" alt="Ozone therapy treatment" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" width="800" height="600" loading="lazy" />
            </div>
            <div class="p-6 text-center">
              <h3 class="text-xl font-semibold mb-3 group-hover:text-emerald-700 transition-colors">Ozone Therapy</h3>
              <p class="text-gray-600 mb-4">Medical ozone applications for immune support, infection treatment and cellular oxygenation.</p>
              <span class="text-emerald-800 font-semibold group-hover:text-emerald-900">Learn More →</span>
            </div>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Pricing Section -->
  <section id="pricing" class="py-16 lg:py-24 bg-slate-50">
    <div class="section-shell">
      <div class="text-center mb-12">
        <h2 class="text-3xl sm:text-4xl font-serif font-bold text-emerald-950 mb-4">Service Pricing</h2>
        <p class="text-lg text-gray-600 max-w-3xl mx-auto">
          Most services are eligible for insurance direct-billing.
        </p>
      </div>

      <div class="max-w-4xl mx-auto">
        <div class="grid md:grid-cols-2 gap-8">
          <!-- Consultations -->
          <div class="bg-white rounded-2xl p-8 shadow-lg border border-emerald-100">
            <h3 class="text-xl font-serif font-semibold text-emerald-950 mb-6 pb-4 border-b border-emerald-100">Consultations</h3>
            <ul class="space-y-4">
              <li class="flex justify-between items-center">
                <span class="text-gray-700">Initial Visit</span>
                <span class="font-semibold text-emerald-950">$200</span>
              </li>
              <li class="flex justify-between items-center">
                <span class="text-gray-700">Follow-up Visit</span>
                <span class="font-semibold text-emerald-950">$100</span>
              </li>
            </ul>
          </div>

          <!-- Treatments -->
          <div class="bg-white rounded-2xl p-8 shadow-lg border border-emerald-100">
            <h3 class="text-xl font-serif font-semibold text-emerald-950 mb-6 pb-4 border-b border-emerald-100">Treatments</h3>
            <ul class="space-y-4">
              <li class="flex justify-between items-center">
                <span class="text-gray-700">Acupuncture</span>
                <span class="font-semibold text-emerald-950">$75</span>
              </li>
              <li class="flex justify-between items-center">
                <span class="text-gray-700">IV Therapy</span>
                <span class="font-semibold text-emerald-950">$130</span>
              </li>
              <li class="flex justify-between items-center">
                <span class="text-gray-700">Prolotherapy</span>
                <span class="font-semibold text-emerald-950">$110</span>
              </li>
              <li class="flex justify-between items-center">
                <span class="text-gray-700">Prolozone</span>
                <span class="font-semibold text-emerald-950">$110</span>
              </li>
              <li class="flex justify-between items-center">
                <span class="text-gray-700">Vitamin B12 Injection</span>
                <span class="font-semibold text-emerald-950">$35</span>
              </li>
            </ul>
          </div>

          <!-- Specialized IV Treatments -->
          <div class="bg-white rounded-2xl p-8 shadow-lg border border-emerald-100">
            <h3 class="text-xl font-serif font-semibold text-emerald-950 mb-6 pb-4 border-b border-emerald-100">Specialized IV Treatments</h3>
            <ul class="space-y-4">
              <li class="flex justify-between items-center">
                <span class="text-gray-700">NAD+ IV Therapy</span>
                <span class="font-semibold text-emerald-950">$190</span>
              </li>
              <li class="flex justify-between items-center">
                <span class="text-gray-700">Chelation Therapy</span>
                <span class="font-semibold text-emerald-950">$130</span>
              </li>
            </ul>
          </div>

          <!-- Combined Visits -->
          <div class="bg-white rounded-2xl p-8 shadow-lg border border-emerald-100">
            <h3 class="text-xl font-serif font-semibold text-emerald-950 mb-6 pb-4 border-b border-emerald-100">Combined Visits</h3>
            <ul class="space-y-4">
              <li class="flex justify-between items-center">
                <span class="text-gray-700">Initial Visit + IV Treatment</span>
                <span class="font-semibold text-emerald-950">$260</span>
              </li>
              <li class="flex justify-between items-center">
                <span class="text-gray-700">Initial Visit + Prolotherapy</span>
                <span class="font-semibold text-emerald-950">$260</span>
              </li>
            </ul>
          </div>
        </div>

        <p class="text-center text-gray-500 mt-8 text-sm">
          Prices subject to change. Please contact us if you have questions about specific treatments.
        </p>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="bg-emerald-950 py-16 lg:py-24">
    <div class="section-shell text-center">
      <h2 class="text-3xl sm:text-4xl font-serif font-bold text-white mb-6">Ready to Start Your Natural Health Journey?</h2>
      <p class="text-lg sm:text-xl text-emerald-100 mb-8 max-w-3xl mx-auto leading-relaxed">
        Schedule your initial naturopathic appointment to discuss your health needs.
      </p>
      <div class="flex justify-center">
        <a
          href="https://macleodnaturopathic.janeapp.com/"
          target="_blank"
          class="bg-white text-emerald-950 px-10 py-4 rounded-full text-lg font-semibold hover:bg-emerald-50 transition-colors shadow-xl inline-flex items-center justify-center"
        >
          Book Online
          <Calendar class="w-5 h-5 ml-2" aria-hidden="true" />
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
---
import BaseLayout from '../layouts/BaseLayout.astro';
import HeroSection from '../components/HeroSection.astro';
import CTAButton from '../components/CTAButton.astro';
import { ChevronRight } from '@lucide/astro';
---

<BaseLayout
  title="Services"
  description="Complete naturopathic healthcare services including IV therapy, prolotherapy, acupuncture, clinical nutrition and specialized treatments for chronic conditions in Halifax, Nova Scotia."
  focusKeyword="naturopathic services Halifax"
>
  <HeroSection title="Naturopathic Services" centered compact>
    Natural healthcare guided by science and rooted in traditional healing
  </HeroSection>

  <!-- Service Categories -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="section-shell">

      <!-- Natural Healthcare -->
      <div id="natural" class="mb-16">
        <div class="text-center mb-12 reveal">
          <h2 class="text-3xl sm:text-4xl font-serif font-bold text-emerald-950 mb-4">Natural Healthcare</h2>
          <p class="text-lg text-gray-600 max-w-3xl mx-auto">
            Evidence-based naturopathic approaches to health optimization and disease prevention
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 reveal reveal-delay-100">
          <!-- Lab Testing -->
          <a href="/lab-testing" class="bg-white border border-emerald-100 rounded-3xl overflow-hidden shadow-lg hover:shadow-xl transition-all hover:-translate-y-1 block group focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2">
            <div class="aspect-[4/3] overflow-hidden">
              <img src="/images/reference/services/lab-testing.webp" alt="Laboratory diagnostic testing" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" width="800" height="600" loading="lazy" />
            </div>
            <div class="p-6 text-center">
              <h3 class="text-xl font-serif font-semibold text-emerald-950 mb-3 group-hover:text-emerald-700 transition-colors">Laboratory Testing</h3>
              <p class="text-gray-600 mb-4">Comprehensive diagnostic testing including functional medicine and nutritional assessments</p>
              <span class="text-emerald-800 font-semibold group-hover:text-emerald-900">Learn More →</span>
            </div>
          </a>

          <!-- Clinical Nutrition -->
          <a href="/clinical-nutrition" class="bg-white border border-emerald-100 rounded-3xl overflow-hidden shadow-lg hover:shadow-xl transition-all hover:-translate-y-1 block group focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2">
            <div class="aspect-[4/3] overflow-hidden">
              <img src="/images/reference/services/clinical-nutrition.webp" alt="Clinical nutrition counseling" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" width="800" height="600" loading="lazy" />
            </div>
            <div class="p-6 text-center">
              <h3 class="text-xl font-serif font-semibold text-emerald-950 mb-3 group-hover:text-emerald-700 transition-colors">Clinical Nutrition</h3>
              <p class="text-gray-600 mb-4">Evidence-based nutritional assessment and targeted nutrient replenishment for optimal health</p>
              <span class="text-emerald-800 font-semibold group-hover:text-emerald-900">Learn More →</span>
            </div>
          </a>

          <!-- Herbal Medicine -->
          <a href="/herbal-medicine" class="bg-white border border-emerald-100 rounded-3xl overflow-hidden shadow-lg hover:shadow-xl transition-all hover:-translate-y-1 block group focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2">
            <div class="aspect-[4/3] overflow-hidden">
              <img src="/images/reference/services/herbal-medicine.webp" alt="Herbal medicine remedies" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" width="800" height="600" loading="lazy" />
            </div>
            <div class="p-6 text-center">
              <h3 class="text-xl font-serif font-semibold text-emerald-950 mb-3 group-hover:text-emerald-700 transition-colors">Herbal Medicine</h3>
              <p class="text-gray-600 mb-4">Traditional and modern botanical medicine for therapeutic treatment and health maintenance</p>
              <span class="text-emerald-800 font-semibold group-hover:text-emerald-900">Learn More →</span>
            </div>
          </a>
        </div>
      </div>

      <!-- Advanced Therapies -->
      <div id="advanced">
        <div class="text-center mb-12 reveal">
          <h2 class="text-3xl sm:text-4xl font-serif font-bold text-emerald-950 mb-4">Advanced Therapies</h2>
          <p class="text-lg text-gray-600 max-w-3xl mx-auto">
            Specialized injectable and intravenous treatments delivered by our clinical team
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-8 reveal reveal-delay-100">
          <!-- IV Therapy -->
          <a href="/iv-therapy" class="bg-white border border-emerald-100 rounded-3xl overflow-hidden shadow-lg hover:shadow-xl transition-all hover:-translate-y-1 block group focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2">
            <div class="aspect-[4/3] overflow-hidden">
              <img src="/images/treatments/iv-patient-man.webp" alt="Patient receiving IV therapy" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" width="800" height="600" loading="lazy" />
            </div>
            <div class="p-6 text-center">
              <h3 class="text-xl font-serif font-semibold text-emerald-950 mb-3 group-hover:text-emerald-700 transition-colors">IV Therapy</h3>
              <p class="text-gray-600 mb-4">Intravenous nutrients for rapid and lasting results: Myers Cocktail, NAD+, Chelation, Glutathione, Vitamin C and more</p>
              <span class="text-emerald-800 font-semibold group-hover:text-emerald-900">Learn More →</span>
            </div>
          </a>

          <!-- Pain Medicine -->
          <a href="/sports-medicine" class="bg-white border border-emerald-100 rounded-3xl overflow-hidden shadow-lg hover:shadow-xl transition-all hover:-translate-y-1 block group focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2">
            <div class="aspect-[4/3] overflow-hidden">
              <img src="/images/treatments/prolotherapy-knee-injection.png" alt="Regenerative injection therapy for pain" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" width="800" height="600" loading="lazy" />
            </div>
            <div class="p-6 text-center">
              <h3 class="text-xl font-serif font-semibold text-emerald-950 mb-3 group-hover:text-emerald-700 transition-colors">Pain Medicine</h3>
              <p class="text-gray-600 mb-4">Regenerative injection therapies for chronic pain, joint conditions and sports injuries</p>
              <span class="text-emerald-800 font-semibold group-hover:text-emerald-900">Learn More →</span>
            </div>
          </a>
        </div>
      </div>


    </div>
  </section>

  <!-- Pricing Section -->
  <section id="pricing" class="py-16 lg:py-24 bg-emerald-50">
    <div class="section-shell">
      <div class="text-center mb-12 reveal">
        <h2 class="text-3xl sm:text-4xl font-serif font-bold text-emerald-950 mb-4">Service Pricing</h2>
        <p class="text-lg text-gray-600 max-w-3xl mx-auto">
          Most services are eligible for insurance direct-billing
        </p>
      </div>

      <div class="max-w-4xl mx-auto">
        <div class="grid md:grid-cols-2 gap-8 reveal reveal-delay-100">
          <!-- Consultations -->
          <div class="group bg-white rounded-3xl p-8 shadow-lg border border-emerald-100 transition-all duration-300 hover:-translate-y-1 hover:shadow-xl hover:border-emerald-200">
            <h3 class="text-xl font-serif font-semibold text-emerald-950 mb-6 pb-4 border-b border-emerald-100 transition-colors group-hover:text-emerald-700">Consultations</h3>
            <ul class="space-y-4">
              <li class="flex justify-between items-center">
                <span class="text-gray-700">Initial Visit</span>
                <span class="font-semibold text-emerald-950">$200</span>
              </li>
              <li class="flex justify-between items-center">
                <span class="text-gray-700">Follow-up Visit</span>
                <span class="font-semibold text-emerald-950">$100</span>
              </li>
            </ul>
          </div>

          <!-- Treatments -->
          <div class="group bg-white rounded-3xl p-8 shadow-lg border border-emerald-100 transition-all duration-300 hover:-translate-y-1 hover:shadow-xl hover:border-emerald-200">
            <h3 class="text-xl font-serif font-semibold text-emerald-950 mb-6 pb-4 border-b border-emerald-100 transition-colors group-hover:text-emerald-700">Treatments</h3>
            <ul class="space-y-4">
              <li class="flex justify-between items-center">
                <span class="text-gray-700">IV Therapy</span>
                <span class="font-semibold text-emerald-950">$130</span>
              </li>
              <li class="flex justify-between items-center">
                <span class="text-gray-700">Injection Treatments</span>
                <span class="font-semibold text-emerald-950">$110</span>
              </li>
              <li class="flex justify-between items-center">
                <span class="text-gray-700">Acupuncture</span>
                <span class="font-semibold text-emerald-950">$75</span>
              </li>
              <li class="flex justify-between items-center">
                <span class="text-gray-700">Vitamin B12 Injection</span>
                <span class="font-semibold text-emerald-950">$35</span>
              </li>
            </ul>
          </div>

          <!-- Specialized IV Treatments -->
          <div class="group bg-white rounded-3xl p-8 shadow-lg border border-emerald-100 transition-all duration-300 hover:-translate-y-1 hover:shadow-xl hover:border-emerald-200">
            <h3 class="text-xl font-serif font-semibold text-emerald-950 mb-6 pb-4 border-b border-emerald-100 transition-colors group-hover:text-emerald-700">Specialized IV Treatments</h3>
            <ul class="space-y-4">
              <li class="flex justify-between items-center">
                <span class="text-gray-700">NAD+ IV Therapy</span>
                <span class="font-semibold text-emerald-950">$190</span>
              </li>
              <li class="flex justify-between items-center">
                <span class="text-gray-700">Myers Cocktail</span>
                <span class="font-semibold text-emerald-950">$130</span>
              </li>
              <li class="flex justify-between items-center">
                <span class="text-gray-700">Chelation Therapy</span>
                <span class="font-semibold text-emerald-950">$130</span>
              </li>
            </ul>
          </div>

          <!-- Combined Visits -->
          <div class="group bg-white rounded-3xl p-8 shadow-lg border border-emerald-100 transition-all duration-300 hover:-translate-y-1 hover:shadow-xl hover:border-emerald-200">
            <h3 class="text-xl font-serif font-semibold text-emerald-950 mb-6 pb-4 border-b border-emerald-100 transition-colors group-hover:text-emerald-700">Combined Visits</h3>
            <ul class="space-y-4">
              <li class="flex justify-between items-center">
                <span class="text-gray-700">Initial Visit + IV Treatment</span>
                <span class="font-semibold text-emerald-950">$260</span>
              </li>
              <li class="flex justify-between items-center">
                <span class="text-gray-700">Initial Visit + Prolotherapy</span>
                <span class="font-semibold text-emerald-950">$260</span>
              </li>
            </ul>
          </div>
        </div>

        <p class="text-center text-gray-500 mt-8 text-sm">
          Prices subject to change. Please contact us if you have questions about specific treatments.
        </p>
      </div>
    </div>
  </section>

  <!-- All Services -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="section-shell">
      <div class="text-center mb-10 reveal">
        <h2 class="text-2xl sm:text-3xl font-serif font-bold text-emerald-950 mb-2">All Services</h2>
        <p class="text-gray-600">Browse our complete list of treatments and services</p>
      </div>

      <!-- 3-column grid: desktop and mobile share same structure -->
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-10 reveal">

        <!-- Natural Healthcare -->
        <div>
          <h3 class="font-serif font-semibold text-emerald-950 mb-5 pb-3 border-b border-emerald-100">Natural Healthcare</h3>
          <ul class="space-y-3">
            <li>
              <a href="/lab-testing" class="group inline-flex items-center gap-1.5 text-base text-emerald-950 hover:text-emerald-700 transition-colors">
                Lab Testing
                <ChevronRight class="w-4 h-4 text-emerald-400 group-hover:text-emerald-600 group-hover:translate-x-0.5 transition-all" aria-hidden="true" />
              </a>
            </li>
            <li>
              <a href="/clinical-nutrition" class="group inline-flex items-center gap-1.5 text-base text-emerald-950 hover:text-emerald-700 transition-colors">
                Clinical Nutrition
                <ChevronRight class="w-4 h-4 text-emerald-400 group-hover:text-emerald-600 group-hover:translate-x-0.5 transition-all" aria-hidden="true" />
              </a>
            </li>
            <li>
              <a href="/herbal-medicine" class="group inline-flex items-center gap-1.5 text-base text-emerald-950 hover:text-emerald-700 transition-colors">
                Herbal Medicine
                <ChevronRight class="w-4 h-4 text-emerald-400 group-hover:text-emerald-600 group-hover:translate-x-0.5 transition-all" aria-hidden="true" />
              </a>
            </li>
            <li>
              <a href="/acupuncture" class="group inline-flex items-center gap-1.5 text-base text-emerald-950 hover:text-emerald-700 transition-colors">
                Acupuncture
                <ChevronRight class="w-4 h-4 text-emerald-400 group-hover:text-emerald-600 group-hover:translate-x-0.5 transition-all" aria-hidden="true" />
              </a>
            </li>
            <li>
              <a href="/sports-medicine" class="group inline-flex items-center gap-1.5 text-base text-emerald-950 hover:text-emerald-700 transition-colors">
                Sports Medicine
                <ChevronRight class="w-4 h-4 text-emerald-400 group-hover:text-emerald-600 group-hover:translate-x-0.5 transition-all" aria-hidden="true" />
              </a>
            </li>
          </ul>
        </div>

        <!-- IV Therapy -->
        <div>
          <h3 class="font-serif font-semibold text-emerald-950 mb-5 pb-3 border-b border-emerald-100">IV Therapy</h3>
          <ul class="space-y-3">
            <li>
              <a href="/myers-cocktail-intravenous-nutrients" class="group inline-flex items-center gap-1.5 text-base text-emerald-950 hover:text-emerald-700 transition-colors">
                Myers Cocktail
                <ChevronRight class="w-4 h-4 text-emerald-400 group-hover:text-emerald-600 group-hover:translate-x-0.5 transition-all" aria-hidden="true" />
              </a>
            </li>
            <li>
              <a href="/nad-therapy" class="group inline-flex items-center gap-1.5 text-base text-emerald-950 hover:text-emerald-700 transition-colors">
                NAD+ Therapy
                <ChevronRight class="w-4 h-4 text-emerald-400 group-hover:text-emerald-600 group-hover:translate-x-0.5 transition-all" aria-hidden="true" />
              </a>
            </li>
            <li>
              <a href="/chelation-therapy" class="group inline-flex items-center gap-1.5 text-base text-emerald-950 hover:text-emerald-700 transition-colors">
                Chelation Therapy
                <ChevronRight class="w-4 h-4 text-emerald-400 group-hover:text-emerald-600 group-hover:translate-x-0.5 transition-all" aria-hidden="true" />
              </a>
            </li>
            <li>
              <a href="/iv-vitamin-c" class="group inline-flex items-center gap-1.5 text-base text-emerald-950 hover:text-emerald-700 transition-colors">
                IV Vitamin C
                <ChevronRight class="w-4 h-4 text-emerald-400 group-hover:text-emerald-600 group-hover:translate-x-0.5 transition-all" aria-hidden="true" />
              </a>
            </li>
            <li>
              <a href="/glutathione" class="group inline-flex items-center gap-1.5 text-base text-emerald-950 hover:text-emerald-700 transition-colors">
                Glutathione
                <ChevronRight class="w-4 h-4 text-emerald-400 group-hover:text-emerald-600 group-hover:translate-x-0.5 transition-all" aria-hidden="true" />
              </a>
            </li>
          </ul>
        </div>

        <!-- Pain & Injection -->
        <div>
          <h3 class="font-serif font-semibold text-emerald-950 mb-5 pb-3 border-b border-emerald-100">Pain & Injection</h3>
          <ul class="space-y-3">
            <li>
              <a href="/prolotherapy" class="group inline-flex items-center gap-1.5 text-base text-emerald-950 hover:text-emerald-700 transition-colors">
                Prolotherapy
                <ChevronRight class="w-4 h-4 text-emerald-400 group-hover:text-emerald-600 group-hover:translate-x-0.5 transition-all" aria-hidden="true" />
              </a>
            </li>
            <li>
              <a href="/prolozone" class="group inline-flex items-center gap-1.5 text-base text-emerald-950 hover:text-emerald-700 transition-colors">
                Prolozone
                <ChevronRight class="w-4 h-4 text-emerald-400 group-hover:text-emerald-600 group-hover:translate-x-0.5 transition-all" aria-hidden="true" />
              </a>
            </li>
            <li>
              <a href="/neural-prolotherapy-pain" class="group inline-flex items-center gap-1.5 text-base text-emerald-950 hover:text-emerald-700 transition-colors">
                Neural Prolotherapy
                <ChevronRight class="w-4 h-4 text-emerald-400 group-hover:text-emerald-600 group-hover:translate-x-0.5 transition-all" aria-hidden="true" />
              </a>
            </li>
            <li>
              <a href="/microcurrent-therapy" class="group inline-flex items-center gap-1.5 text-base text-emerald-950 hover:text-emerald-700 transition-colors">
                Microcurrent Therapy
                <ChevronRight class="w-4 h-4 text-emerald-400 group-hover:text-emerald-600 group-hover:translate-x-0.5 transition-all" aria-hidden="true" />
              </a>
            </li>
            <li>
              <a href="/ozone-therapy" class="group inline-flex items-center gap-1.5 text-base text-emerald-950 hover:text-emerald-700 transition-colors">
                Ozone Therapy
                <ChevronRight class="w-4 h-4 text-emerald-400 group-hover:text-emerald-600 group-hover:translate-x-0.5 transition-all" aria-hidden="true" />
              </a>
            </li>
          </ul>
        </div>

      </div>

    </div>
  </section>

  <!-- CTA Section -->
  <section class="bg-emerald-950 py-16 lg:py-24">
    <div class="section-shell text-center">
      <h2 class="text-3xl sm:text-4xl font-serif font-bold text-white mb-6">Ready to Start Your Natural Health Journey?</h2>
      <p class="text-lg sm:text-xl text-emerald-100 mb-8 max-w-3xl mx-auto leading-relaxed">
        Schedule your initial naturopathic appointment to discuss your health needs
      </p>
      <div class="flex justify-center reveal">
        <CTAButton source="services-cta" />
      </div>
    </div>
  </section>
</BaseLayout>

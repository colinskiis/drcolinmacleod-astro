---
import { type CollectionEntry, getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import BookingButton from '../components/BookingButton.astro';

export async function getStaticPaths() {
  const pages = await getCollection('pages');
  return pages.map((page) => ({
    params: { slug: page.slug },
    props: page,
  }));
}

type Props = CollectionEntry<'pages'>;

const page = Astro.props;
const { Content } = await page.render();

// SEO preparation
const seoTitle = page.data.seo?.title || page.data.title;
const seoDescription = page.data.seo?.description || page.data.description;
const focusKeyword = page.data.seo?.focusKeyword || '';

// Format modified date if exists
const modifiedDate = page.data.modifiedDate 
  ? new Date(page.data.modifiedDate).toLocaleDateString('en-US', {
      year: 'numeric',
      month: 'long', 
      day: 'numeric'
    })
  : null;
---

<BaseLayout 
  title={seoTitle}
  description={seoDescription}
  focusKeyword={focusKeyword}
>
  <!-- Page Header -->
  <article class="py-16 lg:py-24 bg-white">
    <div class="section-shell">
      <div class="max-w-4xl mx-auto">
        
        <!-- Breadcrumbs -->
        <nav class="flex items-center space-x-2 text-sm mb-8">
          <a href="/" class="text-emerald-800 hover:text-emerald-900 font-medium">Home</a>
          <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
          <span class="text-gray-500 truncate">{page.data.title}</span>
        </nav>

        <!-- Page Header -->
        <header class="mb-12">
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-serif font-bold text-emerald-950 mb-6 leading-tight tracking-tight">
            {page.data.title}
          </h1>

          <!-- Page Meta -->
          {modifiedDate && (
            <div class="flex items-center text-sm text-gray-500 border-t border-gray-200 pt-6">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
              <span>Last updated {modifiedDate}</span>
            </div>
          )}
        </header>

        <!-- Page Content -->
        <div class="prose prose-lg max-w-none">
          <Content />
        </div>

        <!-- Page Footer -->
        <footer class="mt-12 pt-8 border-t border-gray-200">
          
          <!-- Quick Links Box -->
          <div class="bg-emerald-50/50 border border-emerald-100 rounded-2xl p-8 mb-8 shadow-sm">
            <div class="flex items-start space-x-4">
              <div class="w-16 h-16 bg-emerald-900 rounded-full flex items-center justify-center flex-shrink-0 shadow-lg">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div class="flex-1">
                <h3 class="text-xl font-serif font-bold text-emerald-950 mb-2">Interested in This Treatment?</h3>
                <p class="text-gray-600 mb-4">
                  Dr. MacLeod offers personalized consultations to discuss how this treatment approach might benefit your specific health concerns.
                </p>
                <div class="flex flex-col sm:flex-row gap-3">
                  <BookingButton
                    text="Book Consultation"
                    variant="secondary"
                    size="sm"
                    source={`page-${page.slug}`}
                  />
                  <a 
                    href="/services"
                    class="inline-flex items-center text-emerald-800 hover:text-emerald-900 font-medium text-sm"
                  >
                    View All Services
                    <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  </a>
                </div>
              </div>
            </div>
          </div>

          <!-- Navigation -->
          <div class="flex justify-between items-center">
            <a 
              href="/services"
              class="inline-flex items-center text-emerald-800 hover:text-emerald-900 font-medium"
            >
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
              </svg>
              Back to Services
            </a>
            
            <div class="text-sm text-gray-500">
              Have questions?
              <a href="/contact" class="text-emerald-800 hover:text-emerald-900 font-medium ml-1">
                Contact Dr. MacLeod
              </a>
            </div>
          </div>
        </footer>
      </div>
    </div>
  </article>

  <!-- CTA Section -->
  <section class="bg-emerald-950 py-16 lg:py-24">
    <div class="section-shell">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl sm:text-4xl font-serif font-bold text-white mb-6">Ready to Start Your Health Journey?</h2>
        <p class="text-lg sm:text-xl text-white/90 mb-8 leading-relaxed">
          Schedule a consultation to learn how naturopathic medicine can support your health goals.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <BookingButton 
            text="Schedule Consultation" 
            size="lg" 
            source={`page-cta-${page.slug}`}
          />
          <a 
            href="/conditions"
            class="border-2 border-white text-white px-8 py-4 rounded-full text-lg font-semibold hover:bg-white hover:text-emerald-950 transition-colors inline-flex items-center justify-center"
          >
            View All Conditions
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Page content styling - matches article template */
  :global(.prose h2) {
    color: #065f46 !important;
    font-family: 'Playfair Display', serif !important;
    font-weight: 700 !important;
    font-size: 2rem !important;
    margin-top: 3.5rem !important;
    margin-bottom: 1.5rem !important;
    line-height: 1.2 !important;
  }
  
  :global(.prose h3) {
    color: #065f46 !important;
    font-family: 'Playfair Display', serif !important;
    font-weight: 600 !important;
    font-size: 1.75rem !important;
    margin-top: 3rem !important;
    margin-bottom: 1.5rem !important;
    line-height: 1.3 !important;
  }
  
  :global(.prose h4) {
    color: #065f46 !important;
    font-weight: 600 !important;
    font-size: 1.5rem !important;
    margin-top: 2.5rem !important;
    margin-bottom: 1rem !important;
  }
  
  :global(.prose p) {
    font-size: 1.125rem !important;
    line-height: 1.8 !important;
    margin-bottom: 2rem !important;
  }
  
  :global(.prose ul) {
    margin: 2rem 0 !important;
    padding-left: 1.5rem !important;
    list-style-type: disc !important;
  }

  :global(.prose ol) {
    margin: 2rem 0 !important;
    padding-left: 1.5rem !important;
    list-style-type: decimal !important;
  }

  :global(.prose li) {
    margin-bottom: 0.75rem !important;
    display: list-item !important;
  }
  
  .prose a {
    color: #059669;
    text-decoration: underline;
  }
  
  .prose a:hover {
    color: #047857;
  }
  
  .prose blockquote {
    border-left: 4px solid #10b981;
    padding-left: 1rem;
    margin: 1.5rem 0;
    font-style: italic;
    background-color: #ecfdf5;
    padding: 1rem;
    border-radius: 0.5rem;
  }
  
  .prose strong {
    font-weight: 600;
    color: #065f46;
  }
  
  .prose em {
    font-style: italic;
  }

  .prose table {
    width: 100%;
    border-collapse: collapse;
    margin: 1.5rem 0;
  }

  .prose th, .prose td {
    border: 1px solid #d1d5db;
    padding: 0.75rem;
    text-align: left;
  }

  .prose th {
    background-color: #f0fdf4;
    font-weight: 600;
    color: #065f46;
  }
</style>
